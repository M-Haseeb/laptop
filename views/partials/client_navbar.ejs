    </nav>
  
    <ul class="sidenav black" id="mobile-demo">
      <li class="myli">
        <div class="my-view" style="border-bottom: 2px solid white !important;">
          <% if (user.img == undefined || user.img == null) { %>
            <div class="profile-img">
              <img src="/assets/normal.png">
            </div>
          <% } else { %>
            <div class="profile-img">
              <img src="<%= user.img %>">
            </div>
          <% } %>
          <p style="color: white;margin-left: 30%;"><%= user.username %></p>
        </div>
      </li>
      <li><a href="/home" class="blue-text active"><i class="fa fa-user blue-text"></i>Home</a></li>
