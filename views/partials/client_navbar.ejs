        <div style="display: flex; align-items: center;">
          <a href="#" data-target="mobile-demo" class="sidenav-trigger show-on-large"><i class="fas fa-bars"></i></a>
          <a href="#" class="brand-logo center mylogo">E-commerce</a>
        </div>
  
        <div style="display: flex; align-items: center;">
          <% if (carts.length >= 1) { %>
            <a href="/cart" style="font-size: 15px;" class="text-blue">
              <i class="text-blue fas fa-shopping-cart">
                <span class="new badge red" style="font-size: 9px;letter-spacing: 0.5px !important;"><%= carts.length %></span>
              </i>
            </a>
